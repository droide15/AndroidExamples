<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnUnreadSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="unreadSms"
        android:text="Unread Sms" />

    <TextView
        android:id="@+id/txtUnreadSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUnreadSms"
        android:layout_alignParentLeft="true"
        android:text="Unread Sms" />

    <Button
        android:id="@+id/btnMissedCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUnreadSms"
        android:layout_alignParentLeft="true"
        android:onClick="missedCalls"
        android:text="Missed Calls" />

    <TextView
        android:id="@+id/txtMissedCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMissedCalls"
        android:layout_alignParentLeft="true"
        android:text="Missed Calls" />

</RelativeLayout>